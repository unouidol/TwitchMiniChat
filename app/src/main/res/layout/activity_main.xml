<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Stato -->
    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starting App"
        android:paddingBottom="8dp" />

    <!-- Selettore account -->
    <TextView
        android:id="@+id/textAccountLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active Account:"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <RadioGroup
        android:id="@+id/radioAccounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioAccount1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Account 1" />

        <RadioButton
            android:id="@+id/radioAccount2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Account 2" />
    </RadioGroup>
    <EditText
        android:id="@+id/editUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username Twitch"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editChannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Twitch Channel"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnSaveAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Active Account" />

    <Button
        android:id="@+id/btnConfigureAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect Active Account" />

    <!-- Etichetta chat -->
    <TextView
        android:id="@+id/textChatLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat:"
        android:paddingTop="12dp"
        android:paddingBottom="4dp" />

    <!-- Area chat scrollabile con container di messaggi -->
    <ScrollView
        android:id="@+id/scrollChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#202020"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/chatContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <!-- Messaggio -->
    <EditText
        android:id="@+id/editMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chat Message..."
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1"
        android:imeOptions="actionSend"
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:paddingTop="8dp" />

</LinearLayout>
